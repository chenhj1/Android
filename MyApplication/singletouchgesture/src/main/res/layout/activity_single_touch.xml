<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    tools:context="com.example.chenhj1.singletouchgesture.SingleTouchActivity">

    <TextView
        android:id="@+id/add_text_bt"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="添加文字"
        android:gravity="center"
        android:src="@drawable/ic_launcher"/>

    <LinearLayout
        android:id="@+id/add_picture_bt_layout"
        android:layout_above="@id/add_text_bt"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/add_picture_bt1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher"/>
        <ImageView
            android:id="@+id/add_picture_bt2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher"/>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/activity_layout"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/add_picture_bt_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg">

        <!--<com.example.chenhj1.singletouchgesture.SingleTouchView2
            android:id="@+id/SingleTouchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale="1.2"
            app:src="@drawable/ic_launcher"
            app:frameColor="@android:color/darker_gray"
            app:controlLocation="right_top"
            app:editable="true"/>-->

    </RelativeLayout>



</RelativeLayout>
